PORT=3000
NODE_ENV=development

# Database Configuration
DB_HOST=localhost
DB_PORT=5432
DB_NAME=totemaster
DB_USER=totemaster
DB_PASSWORD=totemaster

# Authentication Configuration
JWT_SECRET=your-secret-key-change-this-in-production-use-a-long-random-string
JWT_EXPIRES_IN=7d

# Storage Configuration
# STORAGE_TYPE: 'local' or 's3' (s3 not yet implemented)
STORAGE_TYPE=local
# STORAGE_PATH: Absolute path where uploaded files will be stored (Windows example: C:/ToteMaster/uploads)
STORAGE_PATH=./uploads
# SERVER_URL: Base URL of the server (used to generate public URLs for uploaded files)
SERVER_URL=http://localhost:3000

# AI Configuration
# OPENAI_API_KEY: Your OpenAI API key for image analysis features
OPENAI_API_KEY=your-openai-api-key-here
# AI_ENABLED: Enable/disable AI features (set to 'false' if no API key)
AI_ENABLED=true
